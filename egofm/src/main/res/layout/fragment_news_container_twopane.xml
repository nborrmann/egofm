<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/news_twopane_left_padding"
    android:paddingRight="@dimen/news_twopane_right_padding"
    android:background="@color/background_light_grey">

    <FrameLayout
        android:id="@+id/news_list_container"
        android:layout_width="@dimen/news_twopane_list_width"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/news_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>